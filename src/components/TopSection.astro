---
export interface Props {
    img?: string
}

const { img = '/assets/SVG/words.svg' } = Astro.props
---

<div class="w-10/12 lg:w-11/12 h-auto py-8 relative z-20 mx-auto">
    <div class="grid grid-cols-1">
        <div class="relative mx-auto w-full mb-8">
            <img
                id="logo"
                class="w-full lg:w-1/2 h-auto relative mx-auto"
                src={img}
                alt="Caribbean Vacation Countdown"
            />
        </div>
    </div>
</div>
