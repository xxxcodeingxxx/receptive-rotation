---
import Layout from '../layouts/Layout.astro'
import Main from '../components/Main.astro'
import Overlay from '../components/Overlay.astro'
import TopSection from '../components/TopSection.astro'
import Middle from '../components/Middle.astro'
---

<Layout
    title="Caribbean Vacation 2023"
    description="Carribean Vacation Countdown application is a simple vanilla javascript countdown timer that can be set for any date and time in the future."
    image="/assets/screenshot_2.jpg"
>
    <Main img={`/assets/miami.jpg`}>
        <Overlay />
        <TopSection />
        <Middle />
        <div
            class="w-[85%] md:w-3/4 2xl:w-1/2 h-auto relative mx-auto text-center py-8 bg-black/75 mt-4 z-30"
        >
            <a href="https://downsdigitaldesigns.com" target="_blank">
                <img
                    src="/assets/SVG/downs_digital_designs.svg"
                    alt="Downs Digital Desings Logo"
                    class="inline-block w-[64px] h-auto"
                />
                <h3
                    class="text-lg md:text-3xl inline-block text-center text-white ml-4 md:translate-y-2"
                >
                    Developed by Downs Digital Designs LLC &copy;
                </h3>
            </a>
        </div>
    </Main>
</Layout>
